{
  "name": "@nn-lang/nn",
  "version": "0.1.2",
  "description": "",
  "main": "index.js",
  "keywords": [],
  "author": "SieR-VR",
  "license": "MIT",
  "bin": "out/src/nn.js",
  "scripts": {
    "test": "yarn workspace nn-test test",
    "build": "yarn workspaces foreach --all --parallel run build && yarn build:cli",
    "build:cli": "yarn swc src -d out",
    "clean": "yarn workspaces foreach --all --parallel run clean",
    "treesitter": "yarn workspace nn-tree-sitter run tree-sitter",
    "lint": "yarn eslint .",
    "lint:fix": "yarn eslint . --fix",
    "nn": "node --enable-source-maps out/src/nn.js",
    "publish": "release-it",
    "release": "release-it"
  },
  "dependencies": {
    "@nn-lang/nn-analyzer": "workspace:^",
    "@nn-lang/nn-codegen": "workspace:^",
    "@nn-lang/nn-language": "workspace:^",
    "@nn-lang/nn-type-checker": "workspace:^",
    "ts-features": "^1.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@release-it-plugins/workspaces": "^4.2.0",
    "@swc/cli": "^0.5.2",
    "@swc/core": "^1.10.0",
    "@types/node": "^22.10.1",
    "eslint": "^9.16.0",
    "globals": "^15.11.0",
    "release-it": "^17.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0"
  },
  "release-it": {
    "$schema": "https://unpkg.com/release-it/schema/release-it.json",
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it-plugins/workspaces": true
    },
    "git": {
      "requireCleanWorkingDir": false
    },
    "npm": false
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "packageManager": "yarn@4.6.0",
  "workspaces": [
    "packages/*"
  ]
}
