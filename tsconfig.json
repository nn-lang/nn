{
	"compilerOptions": {
		"module": "NodeNext",

		"target": "es2020",
		"lib": ["es2020"],
    "esModuleInterop": true,

    "strict": true,
    "noEmit": true,

    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "skipLibCheck": true,

		"rootDir": ".",
	},
	"exclude": [
		"node_modules",
    "out"
	]
}
